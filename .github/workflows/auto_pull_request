name: pull_request
on:
  pull_request: 
    branches:
      - '?*\-api\/master'
    types:
      - closed
jobs:
  automerge:
    runs-on: ubuntu-latest
    steps:
      - name: Create Pull Request
        if: github.pull_request.merged == true
        id: cpr
        uses: peter-evans/create-pull-request@v1
        with:
          token: ${{ secrets.ACCESS_TOKEN }}
