{
  "name": "chat",
  "version": "0.0.0",
  "private": true,
  "lint-staged": {
    "*/*.js": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "scripts": {
    "test": "jest",
    "precommit": "lint-staged && yarn test",
    "dev:start": "nodemon --exec babel-node bin/www.js ",
    "build": "babel ./ -d build --ignore node_modules",
    "start": "pm2 start ./build/bin/www.js",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "cookie": "^0.4.0",
    "cookie-parser": "~1.4.4",
    "core-js": "3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "https": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.13",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2",
    "pm2": "^4.2.1",
    "socket.io": "^2.5.0",
    "socketio-jwt": "^4.5.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3"
  }
}
